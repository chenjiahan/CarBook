<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/comment_name" android:text="name"
            android:textSize="@dimen/comment_name_size"
            android:layout_margin="@dimen/comment_padding"
            android:textColor="#222222"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/comment_time"
            android:text="2014-5-10"
            android:textSize="20dp"
            android:textColor="#777777"
            android:layout_alignTop="@+id/comment_name" android:layout_alignRight="@+id/comment_text"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/comment_text"
              android:text="This is a content of a comment"
              android:textSize="@dimen/comment_text_size"
              android:layout_below="@+id/comment_name" android:layout_alignLeft="@+id/comment_name"
              android:layout_alignParentRight="true"
              android:singleLine="false"
              android:textColor="#222222"/>

</RelativeLayout>